<!-- Basic Bootstrap Table -->
<div class="card">
    <h5 class="card-header">Kullanıcı İşlemleri</h5>
    <div class="table-responsive text-nowrap">
        <table class="table">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Ad Soyad</th>
                    <th>Görsel</th>
                    <th>Durum</th>
                    <th>Mail</th>
                    <th>Diğer İşlemler</th>
                </tr>
            </thead>
            <tbody class="table-border-bottom-0">
                @foreach (var item in Model)
                {

                    
                <tr>
                    @{ sayac = sayac + 1;}
                    <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>@sayac</strong></td>
                    <td>@item.Name @item.Surname </td>
                    <td>
                        <ul class="list-unstyled users-list m-0 avatar-group d-flex align-items-center">
                            <li data-bs-toggle="tooltip"
                                data-popup="tooltip-custom"
                                data-bs-placement="top"
                                class="avatar avatar-xs pull-up"
                                title="@item.Name @item.Surname ">
                                <img src="~/UserImages/@item.ImageURL" alt="" class="rounded-circle" />
                            </li>

                        </ul>
                    </td>
                    <td><span class="badge bg-label-primary me-1">Aktif</span></td>
                    <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>@item.Email</strong></td>
                    <td>
                        <div class="dropdown">
                            <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                <i class="bx bx-dots-vertical-rounded"></i>
                            </button>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" href="/Admin/User/EditUser/@item.Id"><i class="bx bx-edit-alt me-1"></i> Düzenle</a>
                                <a class="dropdown-item" href="/Admin/User/DeleteUser/@item.Id"><i class="bx bx-trash me-1"></i> Sil</a>
                                <a class="dropdown-item" href="/Admin/User/CommentUser/@item.Id"><i class="bx bx-comment me-1"></i> Yapılan Yorumlar</a>
                                <a class="dropdown-item" href="/Admin/User/ReservationUser/@item.Id"><i class="bx bx-book-heart me-1"></i>Tur Geçmişi</a>
                            </div>
                        </div>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<br />

