@model CreateGuideCommand 
@{
    ViewData["Title"] = "AddGuide";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Yeni Rehber Ekleme Sayfası</h1>
<form method="post">
    <label>Rehber Adı</label>
    <input type="text" class="form-control" asp-for="GuideName" />
    <br />
    <label>Rehber Açıklaması</label>
    <input type="text" class="form-control" asp-for="GuideDescription" />
    <br />
    <button class="btn btn-outline-success">Rehberi Kaydet</button>
</form>

